<div class="box">
  <div class="box-header">
    <h1><%= @project.name %></h1>
    <h2><%= @project.client.name if @project.client.present? %></h2>
  </div>
  <div class="box-body">
    <div>
      <h3>The Goal</h3>
      <p><%= @project.description %></p>
    </div>
    <div>
      <h3>The Process</h3>
      <% @project_phases.each do |phase| %>
        <h4><%= phase.title %></h4>
        <p><%= phase.description %></p>
      <% end %>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_admin_project_path(@project) %> |
<%= link_to 'Back', admin_projects_path %>
