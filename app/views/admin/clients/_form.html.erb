<%= form_for [:admin, client] do |f| %>
  <% if client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="field form-group col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="field form-group col-md-6">
      <%= f.label :main_contact %>
      <%= f.text_field :main_contact, class: 'form-control' %>
    </div>

    <div class="field form-group col-md-6">
      <%= f.label :main_email %>
      <%= f.text_field :main_email, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="field form-group col-md-6">
      <%= f.label :industry %>
      <%= f.text_field :industry, class: 'form-control' %>
    </div>
  </div>

  <h3>Address</h3>
  <div class="row">
    <div class="field form-group col-md-12">
      <%= f.label :address1 %>
      <%= f.text_field :address1, class: 'form-control' %>
    </div>

    <div class="field form-group col-md-12">
      <%= f.label :address2 %>
      <%= f.text_field :address2, class: 'form-control' %>
    </div>

    <div class="field form-group col-md-6">
      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>

    <div class="field form-group col-md-6">
      <%= f.label :province %>
      <%= f.text_field :province, class: 'form-control' %>
    </div>

    <div class="field form-group col-md-6">
      <%= f.label :postal_code %>
      <%= f.text_field :postal_code, class: 'form-control' %>
    </div>

    <div class="field form-group col-md-6">
      <%= f.label :country %>
      <%= f.text_field :country, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-flat btn-primary' %>
  </div>
<% end %>
